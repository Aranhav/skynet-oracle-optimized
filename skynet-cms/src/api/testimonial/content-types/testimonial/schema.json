{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "company": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text",
      "maxLength": 500
    },
    "rating": {
      "default": 5,
      "type": "integer",
      "max": 5,
      "min": 1
    },
    "avatar": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "featured": {
      "type": "boolean"
    }
  }
}
