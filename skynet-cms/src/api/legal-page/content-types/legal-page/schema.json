{
  "kind": "collectionType",
  "collectionName": "legal_pages",
  "info": {
    "singularName": "legal-page",
    "pluralName": "legal-pages",
    "displayName": "Legal Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "lastUpdated": {
      "type": "string",
      "default": "Last updated: January 2025",
      "required": true
    },
    "pageType": {
      "type": "enumeration",
      "enum": [
        "privacy_policy",
        "terms&Condition",
        "refund_policy"
      ]
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "legal.text-section"
      ]
    }
  }
}
