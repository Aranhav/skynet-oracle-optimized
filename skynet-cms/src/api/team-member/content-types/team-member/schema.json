{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string"
    },
    "bio": {
      "type": "text"
    },
    "photo": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "department": {
      "type": "enumeration",
      "enum": [
        "Leadership",
        "Operations",
        "Sales",
        "Technology",
        "Customer Service",
        "Human Resource",
        "Accounts",
        "CXO"
      ]
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
